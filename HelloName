using System;


namespace HelloName
{
    public class HelloName
    {
        public static void Main(string[] args)
        {
            string name = Console.ReadLine();
            Console.WriteLine("Hello, {0}!", PrintHelloName(name));
            Console.Read();
        }

        private static string PrintHelloName(string name)
        {
            return name;
        }
    }
}
